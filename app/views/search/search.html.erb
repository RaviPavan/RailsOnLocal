

<h1>Search Results Posts</h1>
<%= form_with url:search_path,method: :get do |form| %>
  <%= form.label :search %>
  <%= form.text_field :search %>
  <%= form.submit :search%>
<% end%>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%= render "posts/posts",posts:@results %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<%= link_to 'Back', posts_path %>